{
  "name": "pharos-images",
  "version": "0.0.1",
  "description": "This is the work-in-progress, open source, image database which will be used by the PHAROS art history photo archive consortium.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint lib/*.js logic/*.js logic/shared/*.js schemas/*.js server/*.js server/*/*.js utils/*.js converters/*.js *.js",
    "test": "npm run lint",
    "start": "NODE_ENV=production naught start --worker-count 2 --log ./logs/naught.log --stdout ./logs/node.log --stderr ./logs/node-error.log server.js",
    "restart": "naught deploy",
    "stop": "naught stop",
    "dev": "supervisor -i node_modules,old,locales,converters,sources,public server.js",
    "extract-i18n-js": "jsxgettext --keyword=format --keyword=gettext -L javascript --output-dir=./translations --output=messages.pot logic/*.js schemas/*.js server/*.js lib/*.js",
    "extract-i18n-views": "jsxgettext --join-existing --keyword=format --keyword=gettext -L swig --output-dir=./translations --output=messages.pot views/*.swig",
    "extract-i18n": "npm run extract-i18n-js && npm run extract-i18n-views && git add translations/messages.pot",
    "update-i18n": "tx pull -a && po2json.js -p translations/de/messages.po > translations/de/messages.json && po2json.js -p translations/it/messages.po > translations/it/messages.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeresig/pharos-images.git"
  },
  "author": "John Resig <jeresig@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeresig/pharos-images/issues"
  },
  "homepage": "https://github.com/jeresig/pharos-images",
  "dependencies": {
    "argparse": "^1.0.2",
    "async": "^1.5.0",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.14.1",
    "concat-stream": "^1.5.0",
    "connect-mongo": "^0.8.2",
    "cookie-parser": "^1.4.0",
    "csurf": "^1.8.3",
    "csv-streamify": "^3.0.3",
    "dotenv": "^1.2.0",
    "express": "^4.13.3",
    "express-cdn": "^0.2.8",
    "express-session": "^1.12.1",
    "farmhash": "^1.1.0",
    "formidable": "^1.0.17",
    "global-tunnel": "^1.2.0",
    "gm": "^1.18.1",
    "graceful-fs": "^4.1.2",
    "i18n-abide": "0.0.23",
    "imageinfo": "^1.0.4",
    "jsonld": "^0.4.2",
    "kerberos": "0.0.17",
    "libxmljs": "^0.15.0",
    "marcjs": "^0.1.12",
    "method-override": "^2.3.5",
    "mongoosastic": "^3.6.0",
    "mongoose": "^4.2.8",
    "mongoose-schema-extend": "^0.2.0",
    "mongoose-user": "0.0.1",
    "mongoose-version": "^0.2.4",
    "morgan": "^1.6.1",
    "naught": "^1.6.0",
    "parse-dimensions": "0.0.5",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pastec": "0.0.5",
    "request": "^2.67.0",
    "serve-favicon": "^2.3.0",
    "serve-static": "^1.10.0",
    "swig": "^1.4.2",
    "yearrange": "0.0.5"
  },
  "devDependencies": {
    "eslint": "^1.10.2",
    "jsxgettext": "^0.8.1",
    "pre-commit": "^1.1.2"
  },
  "pre-commit": [
    "test",
    "extract-i18n"
  ]
}
