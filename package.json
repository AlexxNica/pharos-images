{
  "name": "pharos-images",
  "version": "0.0.1",
  "description": "This is the work-in-progress, open source, image database which will be used by the PHAROS art history photo archive consortium.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint lib/*.js logic/*.js logic/shared/*.js schemas/*.js server/*.js server/*/*.js utils/*.js converters/*.js tests/*.js *.js",
    "test": "npm run lint && NODE_ENV=test tap tests/schemas/*.js tests/logic/*.js --cov",
    "start": "NODE_ENV=production naught start --worker-count 2 --log ./logs/naught.log --stdout ./logs/node.log --stderr ./logs/node-error.log server.js",
    "restart": "naught deploy",
    "stop": "naught stop",
    "dev": "supervisor -i node_modules,old,locales,converters,sources,public server.js",
    "dev-test": "NODE_ENV=test supervisor -i node_modules,old,locales,converters,sources,public tests/server.js",
    "extract-i18n-js": "jsxgettext --keyword=format --keyword=gettext -L javascript --output-dir=./translations --output=messages.pot logic/*.js schemas/*.js server/*.js lib/*.js",
    "extract-i18n-views": "jsxgettext --join-existing --keyword=format --keyword=gettext -L swig --output-dir=./translations --output=messages.pot views/*.swig",
    "extract-i18n": "npm run extract-i18n-js && npm run extract-i18n-views && git add translations/messages.pot",
    "update-i18n": "tx pull -a && po2json.js -p translations/de/messages.po > translations/de/messages.json && po2json.js -p translations/it/messages.po > translations/it/messages.json",
    "migrate": "migrate",
    "coverage": "NODE_ENV=test tap tests/schemas/*.js tests/logic/*.js --cov --coverage-report=lcov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeresig/pharos-images.git"
  },
  "author": "John Resig <jeresig@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeresig/pharos-images/issues"
  },
  "homepage": "https://github.com/jeresig/pharos-images",
  "dependencies": {
    "JSONStream": "^1.1.1",
    "argparse": "^1.0.7",
    "async": "^1.5.2",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.14.2",
    "concat-stream": "^1.5.0",
    "connect-mongo": "^1.1.0",
    "cookie-parser": "^1.4.1",
    "csurf": "^1.8.3",
    "csv-streamify": "^3.0.3",
    "dotenv": "^2.0.0",
    "eslint": "^2.5.1",
    "express": "^4.13.4",
    "express-cdn": "^0.2.8",
    "express-session": "^1.13.0",
    "farmhash": "^1.1.1",
    "formidable": "^1.0.17",
    "gm": "^1.18.1",
    "i18n-abide": "^0.0.25",
    "iconv-lite": "^0.4.13",
    "imageinfo": "^1.0.4",
    "jsondiffpatch": "^0.1.38",
    "kerberos": "0.0.19",
    "libxmljs": "^0.17.1",
    "marcjs": "^0.1.12",
    "method-override": "^2.3.5",
    "mock-fs": "^3.8.0",
    "moment": "^2.12.0",
    "mongoosastic": "^4.0.2",
    "mongoose": "^4.4.10",
    "mongoose-schema-extend": "0.2.0",
    "mongoose-user": "0.0.1",
    "mongoose-version": "^0.2.4",
    "morgan": "^1.7.0",
    "naught": "^1.6.0",
    "parse-dimensions": "0.0.5",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "password-generator": "^2.0.2",
    "pastec": "0.0.5",
    "readline-sync": "^1.4.1",
    "request": "^2.67.0",
    "serve-favicon": "^2.3.0",
    "serve-static": "^1.10.2",
    "swig": "^1.4.2",
    "unzip2": "^0.2.5",
    "valid-url": "^1.0.9",
    "yearrange": "0.0.5"
  },
  "devDependencies": {
    "eslint": "^2.2.0",
    "jsxgettext": "^0.8.1",
    "migrate": "^0.2.2",
    "mock-fs": "^3.7.0",
    "pre-commit": "^1.1.2",
    "sinon": "^1.17.3",
    "tap": "^5.7.0"
  },
  "pre-commit": [
    "test",
    "extract-i18n"
  ],
  "nyc": {
    "exclude": [
      "tests",
      "server/cron.js"
    ]
  }
}
